    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    ios:Page.UseSafeArea="True"
    Shell.NavBarIsVisible="False"
    xmlns:pancakeview="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:icons="clr-namespace:Tocapagar.Helpers"
    xmlns:touch="clr-namespace:TouchEffect;assembly=TouchEffect"
    x:Class="Tocapagar.Views.HomePage">
    <ContentPage.Content>
        <ScrollView CompressedLayout.IsHeadless="True">
            <AbsoluteLayout CompressedLayout.IsHeadless="True">
                <BoxView
                    x:Name="BX"
                    AbsoluteLayout.LayoutBounds="0,150,1,150"
                    AbsoluteLayout.LayoutFlags="WidthProportional,XProportional"
                    BackgroundColor="Green"/>
                <!--NAVBAR-->
                <FlexLayout x:Name="GR" CompressedLayout.IsHeadless="True" AbsoluteLayout.LayoutBounds="0,0,1,115" AbsoluteLayout.LayoutFlags="WidthProportional" Margin="16">
                    <pancakeview:PancakeView
                        x:Name="NavBar"
                        Elevation="10"
                        CornerRadius="20"
                        BackgroundColor="White"
                        BorderColor="#0A23FB"
                        BorderThickness="{OnPlatform Android=4, iOS=2}">
                        <Grid x:Name="NavGrid" VerticalOptions="Start" Margin="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label
                                x:Name="Menu"
                                Margin="16"
                                VerticalTextAlignment="Center"
                                touch:TouchEff.NativeAnimation="False">
                                <Label.Effects>
                                    <touch:TouchEff Completed="TouchEff_Completed"/>
                                </Label.Effects>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span
                                            FontFamily="FontAwesomeSolid"
                                            FontSize="20"
                                            TextColor="#0A23FB"
                                            Text="{x:Static icons:Icons.Bars}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label
                                VerticalOptions="Center"
                                TextColor="Black"
                                FontFamily="Roboto"
                                FontSize="Large"
                                FontAttributes="Bold"
                                Grid.ColumnSpan="2"
                                Grid.Column="1">
                                <Label.Margin>
                                    <OnPlatform x:TypeArguments="Thickness">
                                        <On Platform="Android" Value="-45,15,0,15"/>
                                        <On Platform="iOS" Value="-40,15,0,15"/>
                                    </OnPlatform>
                                </Label.Margin>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="Tocapagar"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <pancakeview:PancakeView
                                x:Name="MessageContainer"
                                CornerRadius="10"
                                BackgroundColor="White"
                                BorderColor="#0A23FB"
                                BorderThickness="{OnPlatform Android=4, iOS=2}"
                                Grid.Column="2"
                                Grid.ColumnSpan="2"
                                HeightRequest="57">
                                <pancakeview:PancakeView.Margin>
                                    <OnPlatform x:TypeArguments="Thickness">
                                        <On Platform="Android" Value="-30,5,5,5"/>
                                        <On Platform="iOS" Value="-20,5,5,5"/>
                                    </OnPlatform>
                                </pancakeview:PancakeView.Margin>
                                <FlexLayout Direction="Row" Margin="16,0,0,0">
                                    <Label
                                        HorizontalOptions="Fill"
                                        FlexLayout.AlignSelf="Center">
                                        <Label.Margin>
                                            <OnPlatform x:TypeArguments="Thickness">
                                                <On Platform="Android" Value="0,0,0,0"/>
                                                <On Platform="iOS" Value="0,0,0,0"/>
                                            </OnPlatform>
                                        </Label.Margin>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span
                                                    TextColor="Gray"
                                                    Text="Hey Sergio .."
                                                    FontAttributes="Bold"
                                                    FontSize="Small"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label
                                        x:Name="ToggleArrow"
                                        HorizontalTextAlignment="End"
                                        FlexLayout.Grow="1"
                                        FlexLayout.AlignSelf="Center"
                                        TextColor="#0A23FB"
                                        FontFamily="FontAwesomeSolid"
                                        Text="{x:Static icons:Icons.AngleDown}"
                                        FontSize="20">
                                        <Label.Margin>
                                            <OnPlatform x:TypeArguments="Thickness">
                                                <On Platform="Android" Value="0,0,16,0"/>
                                                <On Platform="iOS" Value="0,0,16,0"/>
                                            </OnPlatform>
                                        </Label.Margin>
                                        <Label.Effects>
                                            <touch:TouchEff Completed="NavArrowTapped"/>
                                        </Label.Effects>
                                    </Label>
                                </FlexLayout>
                            </pancakeview:PancakeView>
                            <pancakeview:PancakeView
                                x:Name="MessageContainer2"
                                CornerRadius="10"
                                BorderColor="#0A23FB"
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="4"
                                HeightRequest="152"
                                BorderThickness="{OnPlatform Android=4, iOS=2}">
                                <pancakeview:PancakeView.Margin>
                                    <OnPlatform x:TypeArguments="Thickness">
                                        <On Platform="Android" Value="16"/>
                                        <On Platform="iOS" Value="16"/>
                                    </OnPlatform>
                                </pancakeview:PancakeView.Margin>
                                <FlexLayout Direction="Row" Margin="16,16,0,0">
                                    <Label
                                        HorizontalTextAlignment="Start"
                                        LineBreakMode="CharacterWrap"
                                        XAlign="Start"
                                        YAlign="Start">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span
                                                    TextColor="Gray"
                                                    Text="Â¡Hey, Sergio!
                                                            Recuerda que pagar a tiempo hace que tu vida financiera sea mejor."
                                                    FontAttributes="Bold"
                                                    FontSize="Medium"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </FlexLayout>
                            </pancakeview:PancakeView>
                        </Grid>
                    </pancakeview:PancakeView>
                <!--NavigationBar-->
               
                </FlexLayout>
            </AbsoluteLayout>
        </ScrollView>
